<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CloudAFront</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="parallax">
    <header>
        <div id="navbar">
            <a href="#default" id="logo">CloudA.admin</a>
            <div id="navbar-right">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </div>
    </header>

    <div class="container container-home" id="glass" >

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CloudAFront - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.6.0/gsap.min.js"></script>
    <script>
        const glass = document.getElementById('glass');

        const tl = gsap.timeline({ defaults: { ease: "power2.inOut", duration: 1.5 } })

        tl.from('img', { x: '-100%', opacity: 0 })
            .from('.container', { opacity: 0, delay: .5, duration: 1 }, "-=1.5")
            .from('.container', { x: '-100%', backdropFilter: 'blur(0px)' })
            .from('.seq', { y: -30, opacity: 0, stagger: .2, duration: .5 }, "-=.5")
            .from('h1', { y: 20, clipPath: 'inset(0 0 100% 0)' }, "-=.8")
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
