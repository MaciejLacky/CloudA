@model IEnumerable<CloudA.Data.Event>



@foreach (var item in Model)
{
<div class="card shadow mb-5">
    <div class="card border-light  ">
        <div class="card-header text-uppercase text-secondary">
            <h2 class="p-2">
                @Html.DisplayFor(modelItem => item.TitlePL)

                @Html.DisplayFor(modelItem => item.TitleEng)

                @Html.DisplayFor(modelItem => item.TitleRos)

            </h2>
        </div>
        <div class="card-body">

            <img class="img-front-list img-fluid float-left mr-3 mb-3 rounded" src="/Image/@item.LogoUrl" asp-append-version="true">
            <p class="card-text p-2"> @Html.DisplayFor(modelItem => item.Content)</p>

        </div>
        <h4 class="card-title">
            <small class="p-4">Zaczynamy:  </small> @Html.DisplayFor(modelItem => item.DateFrom)
            <br />
            <small class="p-4">Koniec:  </small>  @Html.DisplayFor(modelItem => item.DateTo)
        </h4>
        <div class="card-footer">
            <a class="btn btn-primary btn-lg rounded float-right mr-3" asp-area="" asp-controller="Client" asp-action="Create" asp-route-id="@item.IdEvent">Zarejestruj się</a>
        </div>
    </div>
</div>

}

